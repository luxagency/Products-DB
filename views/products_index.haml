- unless params[:widget]
  %h1 Listing products

- unless @products.empty?
  %div.nav
    %span.nav-text
      %span#page_number 1 
      of 
      = (Product.count / PP).round + 1
  %a(class="prev browse left")
  .scrollable
    .items
      - @products.in_groups_of(PP) do |group|
        %div
          - group.compact.each do |product|
            .item
              %a(href="#{product.local_url(params[:site_id])}" target="blank" id="#{product.id}")
                %img(src="#{product.image_url}")
                %br
                %span= product.title
  %a(class="next browse right")
  .clear
- else
  No products found

%br

